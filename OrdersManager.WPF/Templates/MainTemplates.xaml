<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:OrdersManager.WPF.ViewModels"
                    xmlns:views="clr-namespace:OrdersManager.WPF.Views">
    
    <DataTemplate DataType="{x:Type vm:EmployeesViewModel}">
        <views:EmployeesView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:DepartmentsViewModel}">
        <views:DepartmentsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
        <views:OrdersView DataContext="{Binding}"/>
    </DataTemplate>
    
</ResourceDictionary>